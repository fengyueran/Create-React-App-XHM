#!/usr/bin/env node
const program = require('commander')
const shell = require('shelljs')

program
    .usage('<Template> <myproject>');
program
    .version('1.0.0')
    .description('快速创建项目CLI')
program
    .command('list')
    .description('显示所有模板')
    .action(()=> {
        console.info(`ReactAppTemp`)
        console.info(`ReactAppTemp-Storybook`)
    });
program
    .command('* <tpl> <project>')
    .action(function (tpl, project) {
        if (!shell.which('git')) {
            shell.echo('Error：未检测到Git工具，请先安装Git')
            shell.exit(1)
        }
        if (tpl && project) {
            let pwd = shell.pwd()
            console.info(`拉取模板...`)
            if (shell.exec(`git clone https://github.com/fengyueran/${tpl}.git`).code !== 0) {
                shell.echo('Error: git clone 失败')
                shell.exit(1)
            }
            console.info(`创建项目...`)
            shell.mv(`${pwd}/${tpl}`, `${pwd}/${project}`)
            shell.cd(`${pwd}/${project}/`)
            shell.rm('-rf', `${pwd}/${project}/.git`)
            if (!shell.which('npm')) {
                shell.echo('Error：未检测到npm工具，请先安装npm')
                shell.exit(1)
            }
            console.info(`创建完成`)
        } else {
            console.error('正确命令例子：initapp-cli ReactAppTemp myproject')
        }
    })
program.parse(process.argv)
if (!program.args.length) {
    program.help();
}
